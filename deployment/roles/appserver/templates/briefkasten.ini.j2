# vi:syntax=dosini
[filter:paste_prefix]
use = egg:PasteDeploy#prefix

[app:briefkasten]
use = egg:briefkasten
filter-with = paste_prefix
pyramid.reload_templates = false
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.debug_templates = false
pyramid.default_locale_name = de
pyramid.includes = 
fs_dropbox_root = /var/briefkasten/drops
fs_pgp_pubkeys = /var/briefkasten/pgp_pubkeys
fs_bin_path = {{apphome}}/middleware_scripts
# appserver_root_url *must* end with trailing slash!
appserver_root_url = {{ploy_approot_url}}
dropbox_view_url_format = http://{{ploy_fqdn}}{{ploy_approot_url}}/dropbox/%s
dropbox_editor_url_format = http://{{ploy_fqdn}}{{ploy_approot_url}}/dropbox/%s/%s
test_submission_secret = {{ploy_test_submission_secret}}
post_secret = {{ploy_post_secret}}
editors = {{ploy_editors}}
admins = {{ploy_admins}}
mail.host = {{ploy_mail_host}}
mail.port = {{ploy_mail_port}}
{% if mail_password is defined %}
mail.user = {{ploy_mail_user}}
mail.password = {{ploy_mail_password}}
{% endif %}
mail.default_sender = {{ploy_mail_sender}}
attachment_size_threshold = {{ploy_attachment_size_threshold}}
[server:main]
use = egg:pyramid#wsgiref
host = 0.0.0.0
port = {{application_port}}

[composite:main]
use = egg:Paste#urlmap
/briefkasten/assets = assets
/ = default

[app:assets]
use = egg:Paste#static
document_root = {{themes_dir}}/{{ploy_theme_name}}/assets

[pipeline:default]
pipeline = theme
   briefkasten

[filter:theme]
use = egg:diazo
rules = {{themes_dir}}/{{ploy_theme_name}}/rules.xml
debug = false
